<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ohgiraffers.hw22thteamproject.statistics.query.mapper.StatisticsMapper">
    <resultMap id="MonthlyPurchaseMap" type="com.ohgiraffers.hw22thteamproject.statistics.query.dto.response.MonthlyPurchaseDTO">
        <result column="ingredient_stock_name" property="name"/>
        <result column="ingredient_stock_category" property="category"/>
        <result column="quantity_unit" property="quantity"/>
        <result column="ingredient_stock_total_cost" property="cost"/>
        <result column="ingredient_stock_bought_at" property="purchaseDate"/>
    </resultMap>
    <select id="selectMonthlyPurchaseList" parameterType="map" resultMap="MonthlyPurchaseMap">
        SELECT
        ingredient_stock_name,
        ingredient_stock_total_cost,
        ingredient_stock_bought_at,
        ingredient_stock_category,
        CONCAT(ingredient_stock_total_quantity, ingredient_stock_unit) AS quantity_unit
        FROM ingredient_stock
        WHERE user_no = #{userNo}
        AND DATE_FORMAT(ingredient_stock_bought_at, '%Y-%m') = #{yearMonth}
        ORDER BY ingredient_stock_bought_at DESC
    </select>

    <resultMap id="IngredientPurchaseMap" type="com.ohgiraffers.hw22thteamproject.statistics.query.dto.response.IngredientPurchaseDTO">
        <result column="ingredient_stock_name" property="name"/>
        <result column="total_cost"            property="totalCost"/>
    </resultMap>
    <select id="selectIngredientPurchaseList" resultMap="IngredientPurchaseMap">
        SELECT
        ingredient_stock_name,
        SUM(ingredient_stock_total_cost) AS total_cost
        FROM ingredient_stock
        WHERE user_no = #{userNo}
        GROUP BY ingredient_stock_name
        ORDER BY total_cost DESC
    </select>

    <resultMap id="CategoryPurchaseMap" type="com.ohgiraffers.hw22thteamproject.statistics.query.dto.response.CategoryPurchaseDTO">
        <result property="category" column="ingredient_stock_category"
                javaType="com.ohgiraffers.hw22thteamproject.statistics.query.dto.response.IngredientCategory"/>
        <result property="totalCost" column="total_cost"/>
    </resultMap>
    <select id="selectCategoryPurchaseList" resultMap="CategoryPurchaseMap">
        SELECT
        ingredient_stock_category,
        COALESCE(SUM(ingredient_stock_total_cost), 0) AS total_cost
        FROM ingredient_stock
        WHERE user_no = #{userNo}
        GROUP BY ingredient_stock_category
        ORDER BY total_cost DESC
    </select>

    <resultMap id="DisposalHistoryMap" type="com.ohgiraffers.hw22thteamproject.statistics.query.dto.response.DisposalHistoryDTO">
        <result property="disposalCost" column="disposal_cost"/>
    </resultMap>
    <select id="selectDisposalHistoryList" resultMap="DisposalHistoryMap">
        SELECT
        disposal_cost
        FROM disposal_histories
        WHERE user_no = #{userNo}
        <if test="startDate != null and startDate != ''">
            AND disposal_at &gt;= #{startDate}
        </if>
        <if test="endDate != null and endDate != ''">
            AND disposal_at &lt;= #{endDate}
        </if>
    </select>
</mapper>