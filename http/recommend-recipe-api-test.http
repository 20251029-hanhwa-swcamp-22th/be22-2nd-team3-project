### 2. AI 레시피 추천 요청 테스트
POST localhost:8080/api/v1/recipes/recommend
Authorization: Bearer {{accessToken}}
Content-Type: application/json

{
  "dishName": "김치찌개",
  "ingredients": [
    "김치",
    "돼지고기 뒷다리살",
    "두부",
    "대파"
  ],
  "dislikedIngredients": [
    "고수",
    "당근"
  ],
  "skillLevel": "BEGINNER",
  "tools": [
    "냄비",
    "가스레인지",
    "칼"
  ],
  "foodTypes": [
    "KOREAN",
    "JAPANESE"
  ],
  "preference": "매콤하고 칼칼하게 만들어주세요. 조미료는 최소한으로 쓰고 싶어요.",
  "servings": 1
}

